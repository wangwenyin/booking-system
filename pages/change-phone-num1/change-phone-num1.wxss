/* pages/change-phone-num1/change-phone-num1.wxss */
page {
    background: #fff;
}

.header-bg {
    width: 100%;
    height: 156rpx;
}

form {
    width: 80%;
    height: calc(100vh - 157rpx);
    margin: 0 auto;
}

.welcome-box {
    padding-top: 50rpx;
    text-align: center;
    font-weight: bold;
}

.please {
    font-size: 32rpx;
    font-weight: normal;
}

.phoneNum {
    margin: 10rpx 0 100rpx 0;
    font-size: 48rpx;
}

form input {
    height: 136rpx;
    padding: 20rpx;
    padding-top: 66rpx;
    font-size: 30rpx;
    border-bottom: 1px solid #ddd;
}

.input-placeholder {
    font-size: 30rpx;
    color: #999;
}

.verify-code {
    display: flex;
}

.verify-code input {
    flex: 3;
    margin-right: 20rpx;
}

.verify-code .send-verify-code {
    flex: 2.1;
	height: 84rpx;
    margin-top: 52rpx;
    padding-left: 60rpx;
	background-color: #6589fc;
    background-image: url(data:image/png;base64,);
    background-repeat: no-repeat;
    background-position: 34rpx 25rpx;
    background-size: 30rpx 35rpx;
	border-radius: 6rpx;
    line-height: 84rpx;
    text-align: center;
    font-size: 30rpx;
    color: #FEFEFF;
}

.next {
    height:84rpx;
    line-height: 84rpx;
    text-align: center;
    margin:  265rpx auto 32rpx;
    font-size: 34rpx;
    color: #FEFEFF;
    background:rgba(101,137,252,1);
    border-radius:8rpx;
}

.back {
    height:84rpx;
    line-height: 84rpx;
    text-align: center;
    margin:  0 auto;
    font-size: 34rpx;
    color: #6589FC;
    background:#fff;
    border:2rpx solid rgba(101, 137, 252, 1);
    border-radius:8rpx;
}
